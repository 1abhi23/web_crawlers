#!/usr/bin/env python
# -*- coding: utf-8 -*-
import requests
import datetime
from bs4 import BeautifulSoup
import random
from time import sleep
import pynotify

while True:
    try:
        sc = requests.get('https://www.google.co.in/webhp?sourceid=chrome-instant&ion=1&espv=2&ie=UTF-8&client=ubuntu#safe=off&tbm=nws&q=india')
        soup = BeautifulSoup(sc.text,'lxml')
        news = soup.select('._cnc a')    
        while True:
            i = random.randrange(0,len(news)-1)
            j = random.randrange(0,len(news)-1)
            if i == j:
                continue
            else:
                pynotify.init('test')
                n = pynotify.Notification('Live News','* '+news[i].text+'\n'+'* '+news[j].text)
                n.show()
                break             
    except requests.exceptions.ConnectionError:
        pynotify.init('test')
        n = pynotify.Notification('Connection Issue','No internet found')
        n.show()
        continue
    sleep(90)

